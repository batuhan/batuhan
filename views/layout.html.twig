	      	<li><a href="http://shareables.me">Shareables</a></li>
	      	<li{% block is_contact %}{% endblock %}><a href="http://{{ app.domain }}/{{ app.translator.trans('route_contact') }}">{{ app.translator.trans('l_contact_me') }}</a></li>
